<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mini_previous_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mini_song_title"
        app:srcCompat="@drawable/ic_baseline_skip_previous_24"
        tools:layout_editor_absoluteY="64dp" />

    <ImageView
        android:id="@+id/mini_play_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mini_previous_btn"
        app:srcCompat="@drawable/ic_baseline_play_circle_outline_24"
        tools:layout_editor_absoluteY="64dp" />

    <ImageView
        android:id="@+id/mini_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mini_play_pause_btn"
        app:srcCompat="@drawable/ic_baseline_skip_next_24"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/mini_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteY="66dp" />
</androidx.constraintlayout.widget.ConstraintLayout>