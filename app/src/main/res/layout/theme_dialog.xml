<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background"
    android:layout_height="wrap_content">

    <TextView
        android:text="Create your own theme"
        android:padding="8dp"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:fontFamily="@font/orbitron"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/songArtist_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginHorizontal="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:text="Begin color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="Pick me"
        android:id="@+id/preview_color_begin"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:text="End color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="Pick me"
        android:id="@+id/preview_color_end"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:text="Preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text=""
        android:background="@android:color/darker_gray"
        android:id="@+id/preview_color"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <Button
        android:id="@+id/default_btn"
        android:layout_marginTop="8dp"
        android:text="@string/use_default"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/cancel"
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:contentDescription="@string/todo" />

        <Button
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/save"
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:contentDescription="@string/todo" />

    </LinearLayout>

</LinearLayout>